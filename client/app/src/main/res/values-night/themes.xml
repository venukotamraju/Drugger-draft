<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedsNearYou" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text color on primary background -->

        <!-- Activity background Color #202c33-->
        <item name="android:windowBackground">#000000</item> <!-- Background color for the entire window -->

        <!-- Card layout background color-->
        <item name="cardBackgroundColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Text color on secondary background -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Primary text color -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Default primary text color -->

        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/gray</item> <!-- Secondary text color -->
    </style>
</resources>